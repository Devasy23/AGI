# LLM Provider Configuration
LLM_PROVIDER=ollama  # Options: ollama, groq, gemini
LLM_MODEL=gemma3:4b  # For ollama

# API Keys for LLMs
GROQ_API_KEY=your-groq-api-key
GEMINI_API_KEY=your-gemini-api-key

# Memory Configuration
VECTOR_STORE=chroma  # Options: chroma, qdrant, faiss
EMBEDDING_MODEL=sentence-transformers  # Options: sentence-transformers, openai, huggingface
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Vector Store Settings
CHROMA_PERSIST_DIR=./chroma_db
QDRANT_URL=your-qdrant-url
QDRANT_API_KEY=your-qdrant-api-key

# Embedding API Keys
OPENAI_API_KEY=your-openai-api-key
HF_API_KEY=your-huggingface-api-key